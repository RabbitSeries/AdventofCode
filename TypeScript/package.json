{
    "name": "@rabbitseries/aoc.typescript",
    "type": "module",
    "scripts": {
        "build:config": "esbuild ./esbuild.ts --outfile=./dist/esbuild.js --bundle --external:esbuild --external:fast-glob --format=esm --platform=node --target=esnext",
