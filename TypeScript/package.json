    "devDependencies": {
        "@eslint/js": "^9.28.0",
        "@types/node": "^22.15.34",
        "esbuild": "^0.25.5",
        "eslint": "^9.30.0",
        "fast-glob": "^3.3.3",
        "globals": "^16.2.0",
        "jiti": "^2.4.2",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.35.1"
    }
}
