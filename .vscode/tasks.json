{
    "tasks": [
        {
            "type": "shell",
            "label": "[Windows] Clean workspace",
            "command": "${workspaceFolder}/.vscode/clean_noConfirm.bat",
            "presentation": {
                "reveal": "silent"
            },
            "args": [
                "${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "[ArchLinux] Clean workspace",
            "command": "${workspaceFolder}/.vscode/clean_noConfirm.sh",
            "presentation": {
                "reveal": "silent"
            },
            "args": [
                "${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "[ArchLinux] [Debug Build] [C/C++]: g++ build active file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++23",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/exe_${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "cppbuild",
            "label": "[ArchLinux] [Release Build] [C/C++]: g++ build active file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++23",
                "-O1",
                "${file}",
                "-o",
                "${fileDirname}/exe_${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        }
    ],
    "version": "2.0.0"
}