{
    "markdownlint.config": {
        "no-inline-html": false
    },
    // Compile sources
    "java.project.sourcePaths": [
        "2023Java",
        "2024Java",
        "utils",
        "Legacy/2023"
    ],
    "autopep8.args": [
        "--line-length",
        "99",
        "-a",
        "--max-line-length",
        "99"
    ],
    // Default classpath search place
    // Clean plugin cache after each path modification.
    "java.project.outputPath": "compileRuntime/bin",
    "java.format.settings.url": "javaFormatter.xml",
    "java.project.referencedLibraries": [
        "JavaLibs/**/*.jar"
    ],
    // "cmake.debugConfig": {
    //     "cwd": "${workspaceFolder}/2024}",
    //     "dumpPath": ""
    // },
    "cmake.options.statusBarVisibility": "visible",
    // "cmake.useCMakePresets":"auto",//Use CMakePresets.json to configure drive CMake configure, build, and test. When using CMakePresets.json, kits, variants, and some settings in settings.json will be ignored, such as:
    // "cmake.buildDirectory": "${workspaceFolder}/builds/${buildKit}/${buildType}"
}