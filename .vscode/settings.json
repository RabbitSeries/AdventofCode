{
    "markdownlint.config": {
        "no-inline-html": false
    },
    // Compile sources
    "java.project.sourcePaths": [
        "2023Java",
        "2024Java",
        "utils",
        "Legacy/2023"
    ],
    "flake8.args": [
        "--config=${workspaceFolder}/.flake8"
    ],
    "autopep8.args": [
        "--global-config=${workspaceFolder}/pyproject.toml",
    ],
    // Default classpath search place
    // Clean plugin cache after each path modification.
    "java.project.outputPath": "compileRuntime/bin",
    "java.format.settings.url": "javaFormatter.xml",
    "java.project.referencedLibraries": [
        "JavaLibs/**/*.jar"
    ],
    // "cmake.debugConfig": {
    //     "cwd": "${workspaceFolder}/2024}",
    //     "dumpPath": ""
    // },
    "cmake.options.statusBarVisibility": "visible",
    "yaml.schemas": {
        "https://json.schemastore.org/github-workflow.json": "file:///d%3A/back_up/ProgrammingEvents/AoC/.github/workflows/AoC_CMake_Linux.yml"
    },
