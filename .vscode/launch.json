{
    "configurations": [
        {
            "name": "Java: java build and debug active file",
            "type": "java",
            "request": "launch",
            // Enable assertation
            "vmArgs": "-ea",
            "cwd": "${fileDirname}",
            "mainClass": "${file}",
            "projectName": "aocjava",
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}"
        },
        {
            "name": "[CMake] [Debug] [MinGW]",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\${relativeFileDirname}\\solution.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\${relativeFileDirname}",
            "environment": [],
            "externalConsole": true,
            // "MIMode": "gdb",
            // "miDebuggerPath": "D:\\Build_Tool_Lib\\x86_64-14.2.0-release-win32-seh-ucrt-rt_v12-rev0\\mingw64\\bin\\gdb.exe",
        },
        {
            "name": "[ArchLinux] [Debug Launch] [C/C++]: g++ build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/exe_${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "[ArchLinux] [Debug Build] [C/C++]: g++ build active file with debug info"
        },
        {
            "name": "[ArchLinux] [Release Launch] [C/C++]: g++ launch release active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/exe_${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "[ArchLinux] [Release Build] [C/C++]: g++ build active file"
        },
        {
            "name": "[ArchLinux] C/C++: gcc build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/exe_${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "[ArchLinux] C/C++: gcc build active file"
        }
    ],
    "version": "2.0.0"
}