{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "environment": {
                "ProjectName": "AoC_Cpp"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install/${presetName}"
            },
            "$comment": "VSCode cmake tools extension hasn't solved ANSI escape colored characters in garbled output, consider use \"CMAKE_COLOR_DIAGNOSTICS\": \"OFF\""
        },
        {
            "name": "ninja-release",
            "inherits": "default",
            "displayName": "Ninja Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "unix-release",
            "inherits": "default",
            "displayName": "Unix Release",
            "generator": "Unix Makefiles",
            "condition": {
                "type": "matches",
                "string": "$penv{PATH}",
                "regex": "usr/bin"
            },
            "toolchainFile": "${sourceDir}/Cpp/cmake/toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-gcc-debug",
            "inherits": "default",
            "displayName": "Windows GCC",
            "generator": "MinGW Makefiles",
            "condition": {
                "type": "allOf",
                "conditions": [
                    {
                        "type": "equals",
                        "lhs": "${hostSystemName}",
                        "rhs": "Windows"
                    }
                ]
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-gcc-release",
            "inherits": "windows-gcc-debug",
            "displayName": "Windows GCC Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-msvc-release",
            "inherits": "windows-gcc-release",
            "displayName": "Windows MSVC Release",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": null
            },
            "description": "Not available right now, msvc does't support bits/stdc++.h. Ninja-multi and MSVC are multi config generator, build type should be specified at build phase"
        }
    ],
    "buildPresets": [
        {
            "name": "unix-release",
            "configurePreset": "unix-release",
            "jobs": 8
        },
        {
            "name": "windows-gcc-debug",
            "inherits": "unix-release",
            "configurePreset": "windows-gcc-debug"
        },
        {
            "name": "windows-gcc-release",
            "inherits": "unix-release",
            "configurePreset": "windows-gcc-release"
        },
        {
            "name": "ninja-release",
            "inherits": "unix-release",
            "configurePreset": "ninja-release"
        },
        {
            "name": "msvc-release",
            "inherits": "unix-release",
            "configurePreset": "windows-msvc-release",
            "configuration": "Release",
            "description": "Typical entries include Debug, Release, RelWithDebInfo and MinSizeRel, but custom build types can also be defined."
        }
    ]
}